<script>
    $(document).ready(function () {
        var header = $(".big-nav>ul>li>a");
        var bigNav = $(".big-nav");
        var smallNav = $(".small-nav");
        var bodyContent = $("#body-content");

        header.click(function () {
            console.log("comming here");
            var listItem = $(this).next(".list-item");
            var chervon = $(this).children(".arrow");
            listItem.slideToggle("fast", function () { });
            chervon.toggleClass("glyphicon-chevron-down", "fast", "easeOutSine");
            chervon.toggleClass("glyphicon-chevron-right", "fast", "easeOutSine");
        });

        $("#btn_Menu").click(function () {
            if (smallNav.hasClass("hidden")) {
                bigNav.toggle("slide", { direction: "left" }, "fast", function () {
                    smallNav.toggleClass("hidden", "fast", "easeOutSine");
                });
            } else {
                smallNav.toggleClass("hidden", "fast", "easeOutSine", function () {
                    bigNav.toggle("slide", { direction: "left" }, "fast", function () { });
                });
            }

            bodyContent.toggleClass("col-md-10", "fast", "easeOutSine");
            bodyContent.toggleClass("col-md-11 col-md-offset-1", "fast", "easeOutSine");
        });
    });
</script>