        }

        .list-Item li a {
            font-size: medium;
            font-weight: normal;
        }

        .icon-flipped {
            transform: scaleX(-1);
            -moz-transform: scaleX(-1);
            -webkit-transform: scaleX(-1);
            -ms-transform: scaleX(-1);
        }

        .small-nav {
            height: 100%;
            padding-left: 15px;
            position: absolute;
            width: 160px;
            box-sizing: border-box;
            z-index: 100;
            transition: all 0.3s ease;
            -moz-transition: all 0.3s ease;
            -webkit-transition: all 0.3s ease;
        }

            .small-nav li a .name {
                display: none;
            }

            .small-nav li:hover {
                background-color: #f5f7f8;
            }

                .small-nav li:hover .name {
                    display: inline-block;
                }

            .small-nav .list-item {
                display: none;
                background-color: #f5f7f8;
            }

            .small-nav > ul > li:hover .list-item {
                display: inline-block;
            }

                .small-nav > ul > li:hover .list-item > li {
                    display: inline-block;
                }
    </style>
</head>
